<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_r6w">

        <TextView
            android:id="@+id/text1"
            style="@style/text17"
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp"
            android:text="@string/dialog_no_pg_info1"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/text2"
            style="@style/text17b"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:text="@string/dialog_no_pg_info2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text1"/>

        <TextView
            android:id="@+id/text3"
            style="@style/text17"
            android:layout_marginStart="20dp"
            android:text="@string/dialog_no_pg_info3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text2"/>

        <ImageView
            android:id="@+id/ic_hamburger"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="3dp"
            android:src="@drawable/icon_hamburger"
            app:layout_constraintStart_toEndOf="@+id/text3"
            app:layout_constraintTop_toTopOf="@+id/text3"
            app:layout_constraintBottom_toBottomOf="@+id/text3"/>

        <TextView
            style="@style/text17"
            android:layout_width="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/right_angle"
            app:layout_constraintStart_toEndOf="@+id/ic_hamburger"
            app:layout_constraintTop_toTopOf="@+id/text3"
            app:layout_constraintBottom_toBottomOf="@+id/text3" />

        <TextView
            android:id="@+id/text4"
            style="@style/text17"
            android:layout_marginStart="20dp"
            android:text="@string/dialog_no_pg_info4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text3"/>

        <TextView
            android:id="@+id/confirm"
            style="@style/btn_dialog"
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:text="@string/btn_confirm"
            app:layout_constraintTop_toBottomOf="@+id/text4"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>