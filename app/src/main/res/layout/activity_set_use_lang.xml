<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        style="@style/title"
        android:text="@string/title_set_language"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_back_white" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/eng"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:paddingStart="20dp"
        android:paddingEnd="15dp"
        app:layout_constraintTop_toBottomOf="@+id/title">
        <ImageView
            android:id="@+id/img_eng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_language_eng"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            style="@style/text17"
            android:id="@+id/tv_eng"
            android:layout_marginStart="15dp"
            android:text="@string/lang_eng"
            app:layout_constraintStart_toEndOf="@+id/img_eng"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <CheckBox
            style="@style/toggle"
            android:id="@+id/checkEng"
            android:checked="true"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <View
            android:id="@+id/disableEng"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/white70"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/img_eng"
            app:layout_constraintEnd_toEndOf="@+id/tv_eng"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/esp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:paddingStart="20dp"
        android:paddingEnd="15dp"
        app:layout_constraintTop_toBottomOf="@+id/eng">
        <ImageView
            android:id="@+id/img_esp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_language_esp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            style="@style/text17"
            android:id="@+id/tv_esp"
            android:layout_marginStart="15dp"
            android:text="@string/lang_esp"
            app:layout_constraintStart_toEndOf="@+id/img_esp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <CheckBox
            style="@style/toggle"
            android:id="@+id/checkEsp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <View
            android:id="@+id/disableEsp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/white70"
            app:layout_constraintStart_toStartOf="@+id/img_esp"
            app:layout_constraintEnd_toEndOf="@+id/tv_esp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/kor"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:paddingStart="20dp"
        android:paddingEnd="15dp"
        app:layout_constraintTop_toBottomOf="@+id/esp">
        <ImageView
            android:id="@+id/img_kor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_language_kor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            style="@style/text17"
            android:id="@+id/tv_kor"
            android:layout_marginStart="15dp"
            android:text="@string/lang_kor"
            app:layout_constraintStart_toEndOf="@+id/img_kor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <CheckBox
            style="@style/toggle"
            android:id="@+id/checkKor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <View
            android:id="@+id/disableKor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/white70"
            app:layout_constraintStart_toStartOf="@+id/img_kor"
            app:layout_constraintEnd_toEndOf="@+id/tv_kor"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chn"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:paddingStart="20dp"
        android:paddingEnd="15dp"
        app:layout_constraintTop_toBottomOf="@+id/kor">
        <ImageView
            android:id="@+id/img_chn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_language_chn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            style="@style/text17"
            android:id="@+id/tv_chn"
            android:layout_marginStart="15dp"
            android:text="@string/lang_chn"
            app:layout_constraintStart_toEndOf="@+id/img_chn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <CheckBox
            style="@style/toggle"
            android:id="@+id/checkChn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <View
            android:id="@+id/disableChn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/white70"
            app:layout_constraintStart_toStartOf="@+id/img_chn"
            app:layout_constraintEnd_toEndOf="@+id/tv_chn"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/jpn"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:paddingStart="20dp"
        android:paddingEnd="15dp"
        app:layout_constraintTop_toBottomOf="@+id/chn">
        <ImageView
            android:id="@+id/img_jpn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_language_jpn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            style="@style/text17"
            android:id="@+id/tv_jpn"
            android:layout_marginStart="15dp"
            android:text="@string/lang_jpn"
            app:layout_constraintStart_toEndOf="@+id/img_jpn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <CheckBox
            style="@style/toggle"
            android:id="@+id/checkJpn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <View
            android:id="@+id/disableJpn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/white70"
            app:layout_constraintStart_toStartOf="@+id/img_jpn"
            app:layout_constraintEnd_toEndOf="@+id/tv_jpn"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>