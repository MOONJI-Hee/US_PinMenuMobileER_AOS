<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wooriyo.us.pinmenumobileer.printer.SupportPrinterActivity">

    <TextView
        android:id="@+id/title"
        style="@style/title"
        android:text="@string/printer_title_support"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_back_white" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rp325"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/title">
        <RadioButton
            android:id="@+id/ck_rp325"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/selector_check"
            android:button="@null"
            android:checked="true"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_rp325"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/iv_rp325"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/rp325"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ck_rp325"
            app:layout_constraintEnd_toStartOf="@+id/layout1"
            app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:id="@+id/layout1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_rp325">
            <TextView
                style="@style/text17"
                android:text="Rongta"/>
            <TextView
                style="@style/text17"
                android:text="RP325"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/open_rp325"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_list_arrow_down"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rp325_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="35dp"
        android:paddingVertical="15dp"
        android:background="@color/f9"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/rp325">
        <TextView
            style="@style/text15"
            android:id="@+id/tv1"
            android:text="@string/printer_conn_way"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            style="@style/text15"
            android:id="@id/tv2"
            android:text="@string/printer_etc"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv1"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            style="@style/text15"
            android:text="@string/printer_bluetooth"
            app:layout_constraintTop_toTopOf="@+id/tv1"
            app:layout_constraintStart_toEndOf="@+id/tv1"/>
        <TextView
            style="@style/text15"
            app:layout_constraintTop_toTopOf="@+id/tv2"
            app:layout_constraintStart_toEndOf="@+id/tv2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        style="@style/subtext"
        android:id="@+id/support_info"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:text="@string/printer_support_info"
        app:layout_constraintTop_toBottomOf="@+id/rp325_info"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        style="@style/btn"
        android:id="@+id/select"
        android:layout_width="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="20dp"
        android:text="@string/btn_choice"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>